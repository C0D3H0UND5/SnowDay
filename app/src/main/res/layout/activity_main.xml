<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.sjhigh.snowday.MainActivity">

    <Button
        android:text="@string/view_closures_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closures_main_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/view_delays_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delays_main_button"
        android:layout_above="@+id/closures_main_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/get_tweets_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitter_main_button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/greyhound"
        android:id="@+id/greyhound_main_imageView"
        android:contentDescription="@string/credit_greyhound"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/twitter_main_button" />

    <TextView
        android:text="Use this space to show the user information about their bus(es) and school (Show if their school is involved in a tweet and if all schools are cancelled)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/personal_main_textView"
        android:layout_above="@+id/delays_main_button"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:layout_below="@+id/settings_main_button" />

    <Button
        android:text="@string/edit_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter_main_button"
        android:layout_alignParentStart="true"
        android:id="@+id/settings_main_button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
